# Environment variables for production
DEBUG=False
SECRET_KEY={{ secret_key | default('change-me') }}
DEPLOYMENT_ENV=production

# Database
DB_NAME={{ db_name | default('morel_api_db') }}
DB_USER={{ db_user | default('postgres') }}
DB_PASSWORD={{ db_password | default('postgres') }}
DB_HOST=db
DB_PORT=5432

# Allowed Hosts
ALLOWED_HOSTS={{ allowed_hosts | default('localhost,127.0.0.1') }}

# CORS
CORS_ALLOWED_ORIGINS={{ cors_origins | default('http://localhost:8000') }}

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Media & Static
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles

# Email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST={{ email_host | default('') }}
EMAIL_PORT={{ email_port | default('587') }}
EMAIL_USE_TLS=True
EMAIL_HOST_USER={{ email_user | default('') }}
EMAIL_HOST_PASSWORD={{ email_password | default('') }}
